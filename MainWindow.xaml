<Window
    x:Class="JpnStudyTool.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:JpnStudyTool"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:JpnStudyTool.Models"
    x:Name="RootWindow"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" RequestedTheme="Light">

        <Grid
            x:Name="ListViewContentGrid"
            Margin="10"
            Visibility="Visible">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    FontSize="20"
                    Text="Sentence History" />
                <Button
                    Grid.Column="1"
                    Click="SettingsButton_Click"
                    Content="Settings" />
            </Grid>
            <ListView
                x:Name="HistoryListView"
                Grid.Row="1"
                IsItemClickEnabled="False"
                ItemsSource="{Binding SentenceHistory}"
                SelectedIndex="{Binding SelectedSentenceIndex, Mode=TwoWay}"
                SelectionChanged="HistoryListView_SelectionChanged"
                SelectionMode="Single"
                TabIndex="0">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="models:SentenceHistoryItem">
                        <TextBlock
                            Margin="5"
                            Text="{x:Bind Sentence}"
                            TextTrimming="CharacterEllipsis" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>

        <Grid
            x:Name="DetailViewContentGrid"
            Margin="10"
            Visibility="Collapsed">

            <Grid.RowDefinitions>
                <RowDefinition Height="3*" MaxHeight="250" />
                <RowDefinition Height="7*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Border
                    x:Name="SentenceFocusAnchor"
                    Width="0"
                    Height="0"
                    IsTabStop="True"
                    TabIndex="0" />

                <controls:WebView2
                    x:Name="SentenceWebView"
                    Margin="0,0,0,10"
                    CoreWebView2Initialized="SentenceWebView_CoreWebView2Initialized"
                    Source="about:blank"
                    TabIndex="1" />
            </Grid>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="7*" />
                    <ColumnDefinition Width="3*" />
                </Grid.ColumnDefinitions>

                <controls:WebView2
                    x:Name="DefinitionWebView"
                    Grid.Column="0"
                    Margin="0,0,10,0"
                    CoreWebView2Initialized="DefinitionWebView_CoreWebView2Initialized"
                    Source="about:blank"
                    TabIndex="2" />

                <!--  Columna Derecha: Información del Token (como estaba)  -->
                <ScrollViewer
                    Grid.Column="1"
                    HorizontalScrollBarVisibility="Disabled"
                    VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10,0,0,0" Visibility="{Binding SelectedToken, Converter={StaticResource NullToVisibilityConverter}}">
                        <TextBlock
                            Margin="0,0,0,5"
                            Style="{ThemeResource SubtitleTextBlockStyle}"
                            Text="Token Info:" />
                        <Grid ColumnSpacing="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" MinWidth="80" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="0"
                                FontWeight="SemiBold"
                                Text="PoS:" />
                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="1"
                                Text="{Binding SelectedToken.PartOfSpeech, FallbackValue='-'}"
                                TextWrapping="Wrap" />
                            <TextBlock
                                Grid.Row="1"
                                Grid.Column="0"
                                FontWeight="SemiBold"
                                Text="Subcat 1:" />
                            <TextBlock
                                Grid.Row="1"
                                Grid.Column="1"
                                Text="{Binding SelectedToken.POSSubcategory1, FallbackValue='-'}"
                                TextWrapping="Wrap" />
                            <TextBlock
                                Grid.Row="2"
                                Grid.Column="0"
                                FontWeight="SemiBold"
                                Text="Subcat 2:" />
                            <TextBlock
                                Grid.Row="2"
                                Grid.Column="1"
                                Text="{Binding SelectedToken.POSSubcategory2, FallbackValue='-'}"
                                TextWrapping="Wrap" />
                            <TextBlock
                                Grid.Row="3"
                                Grid.Column="0"
                                FontWeight="SemiBold"
                                Text="Conj. Type:" />
                            <TextBlock
                                Grid.Row="3"
                                Grid.Column="1"
                                Text="{Binding SelectedToken.ConjugationType, FallbackValue='-'}"
                                TextWrapping="Wrap" />
                            <TextBlock
                                Grid.Row="4"
                                Grid.Column="0"
                                FontWeight="SemiBold"
                                Text="Conj. Form:" />
                            <TextBlock
                                Grid.Row="4"
                                Grid.Column="1"
                                Text="{Binding SelectedToken.ConjugationForm, FallbackValue='-'}"
                                TextWrapping="Wrap" />
                        </Grid>
                    </StackPanel>
                </ScrollViewer>

            </Grid>

        </Grid>

    </Grid>
</Window>