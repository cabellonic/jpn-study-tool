<!--  MainWindow.xaml  -->
<Window
    x:Class="JpnStudyTool.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:JpnStudyTool"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:JpnStudyTool.Models"
    x:Name="RootWindow"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" RequestedTheme="Light">

        <Grid
            x:Name="ListViewContentGrid"
            Margin="10"
            Visibility="Visible">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    FontSize="20"
                    Text="Sentence History" />
                <Button
                    Grid.Column="1"
                    Click="SettingsButton_Click"
                    Content="Settings" />
            </Grid>
            <ListView
                x:Name="HistoryListView"
                Grid.Row="1"
                IsItemClickEnabled="False"
                ItemsSource="{Binding SentenceHistory}"
                SelectedIndex="{Binding SelectedSentenceIndex, Mode=TwoWay}"
                SelectionChanged="HistoryListView_SelectionChanged"
                SelectionMode="Single"
                TabIndex="0">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="models:SentenceHistoryItem">
                        <TextBlock
                            Margin="5"
                            Text="{x:Bind Sentence}"
                            TextTrimming="CharacterEllipsis" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>

        <Grid
            x:Name="DetailViewContentGrid"
            Margin="10"
            Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="3*" MaxHeight="600" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <ScrollViewer
                x:Name="SentenceScrollViewer"
                Grid.Row="0"
                Margin="0,0,0,10"
                Padding="5"
                BorderBrush="{ThemeResource SystemControlForegroundBaseMediumLowBrush}"
                BorderThickness="0,0,0,1"
                HorizontalScrollBarVisibility="Disabled"
                HorizontalScrollMode="Disabled"
                VerticalScrollBarVisibility="Auto"
                VerticalScrollMode="Auto">
                <RichTextBlock
                    x:Name="SentenceRichTextBlock"
                    FontSize="{Binding SentenceFontSize, ElementName=RootWindow, Mode=OneWay}"
                    Foreground="Black"
                    IsTextSelectionEnabled="True"
                    LineHeight="{Binding SentenceLineHeight, ElementName=RootWindow, Mode=OneWay}"
                    SelectionHighlightColor="LightSkyBlue"
                    TabIndex="1"
                    TextWrapping="Wrap" />
            </ScrollViewer>

            <ScrollViewer
                x:Name="DefinitionScrollViewer"
                Grid.Row="1"
                Padding="5"
                Background="Transparent"
                TabIndex="2"
                VerticalScrollBarVisibility="Auto"
                VerticalScrollMode="Auto">
                <StackPanel MinHeight="150" Orientation="Vertical">
                    <TextBlock
                        Margin="0,0,0,5"
                        Style="{ThemeResource SubtitleTextBlockStyle}"
                        Text="Token Info:"
                        Visibility="{Binding SelectedToken, Converter={StaticResource NullToVisibilityConverter}}" />
                    <Grid ColumnSpacing="10" Visibility="{Binding SelectedToken, Converter={StaticResource NullToVisibilityConverter}}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="0"
                            FontWeight="SemiBold"
                            Text="Reading:" />
                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="1"
                            Text="{Binding SelectedToken.Reading, FallbackValue='-'}" />
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="0"
                            FontWeight="SemiBold"
                            Text="Base Form:" />
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="1"
                            Text="{Binding SelectedToken.BaseForm, FallbackValue='-'}" />
                        <TextBlock
                            Grid.Row="2"
                            Grid.Column="0"
                            FontWeight="SemiBold"
                            Text="PoS:" />
                        <TextBlock
                            Grid.Row="2"
                            Grid.Column="1"
                            Text="{Binding SelectedToken.PartOfSpeech, FallbackValue='-'}" />
                    </Grid>
                    <TextBlock
                        Margin="0,15,0,5"
                        Style="{ThemeResource SubtitleTextBlockStyle}"
                        Text="Definition:" />
                    <TextBlock
                        x:Name="DefinitionTextBlock"
                        FontSize="{Binding DefinitionFontSize, ElementName=RootWindow, Mode=OneWay}"
                        Foreground="{ThemeResource SystemControlPageTextBaseHighBrush}"
                        Text="Lorem ipsum dolor sit amet..."
                        TextWrapping="Wrap" />
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>