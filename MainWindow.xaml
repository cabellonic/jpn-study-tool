<Window
    x:Class="JpnStudyTool.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:JpnStudyTool"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:JpnStudyTool.Models"
    x:Name="RootWindow"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" RequestedTheme="Light">

        <Grid
            x:Name="ListViewContentGrid"
            Margin="10"
            Visibility="{Binding CurrentViewInternal, Converter={StaticResource StringEqualsTriggerConverter}, ConverterParameter=list}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    FontSize="20"
                    Text="Sentence History" />
                <Button
                    Grid.Column="1"
                    Click="SettingsButton_Click"
                    Content="Settings" />
            </Grid>
            <ListView
                x:Name="HistoryListView"
                Grid.Row="1"
                IsItemClickEnabled="False"
                ItemsSource="{Binding SentenceHistory}"
                SelectedIndex="{Binding SelectedSentenceIndex, Mode=TwoWay}"
                SelectionChanged="HistoryListView_SelectionChanged"
                SelectionMode="Single"
                TabIndex="0">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="models:SentenceHistoryItem">
                        <TextBlock
                            Margin="5"
                            Text="{x:Bind Sentence}"
                            TextTrimming="CharacterEllipsis" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>

        <Grid
            x:Name="DetailViewContentGrid"
            Margin="10"
            Visibility="{Binding CurrentViewInternal, Converter={StaticResource StringEqualsTriggerConverter}, ConverterParameter=detail}">

            <Grid.RowDefinitions>
                <RowDefinition Height="3*" MaxHeight="250" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="7*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Border
                    x:Name="SentenceFocusAnchor"
                    Width="0"
                    Height="0"
                    IsTabStop="True"
                    TabIndex="0" />
                <controls:WebView2
                    x:Name="SentenceWebView"
                    Margin="0,0,0,10"
                    CoreWebView2Initialized="SentenceWebView_CoreWebView2Initialized"
                    IsHitTestVisible="False"
                    Source="about:blank"
                    TabIndex="1" />
                <ProgressRing
                    Width="50"
                    Height="50"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    IsActive="{Binding IsAnalyzingData}"
                    Visibility="{Binding IsAnalyzingData, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=invert}" />
            </Grid>

            <TextBlock
                Grid.Row="1"
                Margin="5,0,5,5"
                Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                Text="{Binding ApiErrorMessage}"
                TextWrapping="Wrap"
                Visibility="{Binding ApiErrorMessage, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=invert}" />

            <StackPanel
                Grid.Row="2"
                Margin="0,0,5,5"
                HorizontalAlignment="Right"
                Orientation="Horizontal"
                Visibility="{Binding CurrentSentenceAIAnalysis, Converter={StaticResource NullToVisibilityConverter}}">
                <Button
                    Padding="8,4"
                    Command="{Binding CopyAIAnalysisCommand}"
                    Content="Copy AI Analysis"
                    FontSize="12"
                    Style="{StaticResource SecondaryButtonStyle}" />
            </StackPanel>

            <Grid Grid.Row="3">
                <controls:WebView2
                    x:Name="DefinitionWebView"
                    Margin="0,0,0,0"
                    CoreWebView2Initialized="DefinitionWebView_CoreWebView2Initialized"
                    IsHitTestVisible="False"
                    Source="about:blank"
                    TabIndex="2" />
                <ProgressRing
                    Width="40"
                    Height="40"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    IsActive="{Binding IsLoadingDefinition}"
                    Visibility="{Binding IsLoadingDefinition, Converter={StaticResource BooleanToVisibilityConverter}}" />
            </Grid>
        </Grid>
    </Grid>
</Window>