<Page
    x:Class="JpnStudyTool.Views.MainHubPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:JpnStudyTool.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models_local="using:JpnStudyTool.Models"
    xmlns:sys="using:System"
    xmlns:viewmodels="using:JpnStudyTool.ViewModels"
    x:Name="HubPageRoot"
    x:DataType="viewmodels:MainHubViewModel"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Page.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:IntToVisibilityConverter x:Key="IntToVisibilityConverter" />
    </Page.Resources>

    <Grid Padding="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,20">
            <TextBlock
                VerticalAlignment="Center"
                FontSize="24"
                Text="Japanese Study Tool" />
            <Button
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Command="{x:Bind ViewModel.GoToSettingsCommand}"
                Content="Settings" />
        </Grid>

        <StackPanel Grid.Row="1" Margin="0,0,0,20">
            <TextBlock
                Margin="0,0,0,10"
                Style="{ThemeResource TitleTextBlockStyle}"
                Text="Recent Sessions" />
            <ScrollViewer
                MaxHeight="200"
                HorizontalScrollBarVisibility="Auto"
                VerticalScrollBarVisibility="Disabled">
                <ItemsRepeater ItemsSource="{x:Bind ViewModel.RecentSessions}">
                    <ItemsRepeater.Layout>
                        <StackLayout Orientation="Horizontal" Spacing="10" />
                    </ItemsRepeater.Layout>
                    <ItemsRepeater.ItemTemplate>
                        <DataTemplate x:DataType="viewmodels:SessionDisplayItem">
                            <Button
                                Padding="0"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                Command="{Binding DataContext.ContinueSessionCommand, ElementName=HubPageRoot}"
                                CommandParameter="{x:Bind SessionId}"
                                CornerRadius="{StaticResource ControlCornerRadius}">
                                <StackPanel
                                    Width="150"
                                    Padding="10"
                                    Orientation="Vertical">
                                    <Image
                                        Height="80"
                                        Margin="0,0,0,5"
                                        HorizontalAlignment="Center"
                                        Source="{x:Bind DisplayImageSource, Mode=OneWay}"
                                        Stretch="UniformToFill"
                                        Visibility="{x:Bind HasImagePath, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                    <Border
                                        Height="80"
                                        Margin="0,0,0,5"
                                        Background="LightGray"
                                        CornerRadius="4"
                                        Visibility="{x:Bind ShowDefaultImage, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontSize="48"
                                            Foreground="DarkGray"
                                            Text="?" />
                                    </Border>
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        FontWeight="SemiBold"
                                        Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                        Text="{x:Bind Name}"
                                        TextTrimming="CharacterEllipsis" />
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        FontSize="10"
                                        Foreground="Gray"
                                        Text="{x:Bind sys:String.Format('Tokens: {0}', TotalTokensUsedSession), Mode=OneWay}" />
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        FontSize="10"
                                        Foreground="Gray"
                                        Text="{x:Bind sys:String.Format('Last Used: {0}', LastModifiedDisplay), Mode=OneWay}" />
                                </StackPanel>
                            </Button>
                        </DataTemplate>
                    </ItemsRepeater.ItemTemplate>
                </ItemsRepeater>
            </ScrollViewer>
            <TextBlock
                Margin="0,10,0,0"
                HorizontalAlignment="Center"
                Text="No recent sessions found."
                Visibility="{x:Bind ViewModel.RecentSessions.Count, Converter={StaticResource IntToVisibilityConverter}, ConverterParameter=invertIfZero, Mode=OneWay}" />
        </StackPanel>

        <StackPanel
            Grid.Row="2"
            Margin="0,0,0,20"
            HorizontalAlignment="Center"
            Orientation="Horizontal"
            Spacing="15">
            <Button Padding="20,10" Command="{x:Bind ViewModel.CreateNewSessionCommand}">
                <StackPanel Orientation="Vertical" Spacing="5">
                    <FontIcon FontSize="20" Glyph="" />
                    <TextBlock Text="New Session" TextAlignment="Center" />
                </StackPanel>
            </Button>
            <Button Padding="20,10" Command="{x:Bind ViewModel.StartFreeSessionCommand}">
                <StackPanel Orientation="Vertical" Spacing="5">
                    <FontIcon FontSize="20" Glyph="" />
                    <TextBlock Text="Free Session" TextAlignment="Center" />
                </StackPanel>
            </Button>
            <Button
                Padding="20,10"
                Background="ForestGreen"
                Command="{x:Bind ViewModel.GoToVocabularyCommand}"
                Foreground="White">
                <StackPanel Orientation="Vertical" Spacing="5">
                    <FontIcon FontSize="20" Glyph="" />
                    <TextBlock Text="Saved Words" TextAlignment="Center" />
                </StackPanel>
            </Button>
        </StackPanel>

        <Button
            Grid.Row="3"
            Margin="0,0,0,15"
            HorizontalAlignment="Center"
            Command="{x:Bind ViewModel.EndActiveSessionCommand}"
            Content="End Current Session"
            Style="{StaticResource SecondaryButtonStyle}"
            Visibility="{x:Bind ViewModel.IsSessionCurrentlyActive, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}" />

        <Border
            Grid.Row="4"
            Margin="0,0,0,10"
            Padding="10"
            Background="AliceBlue">
            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Foreground="Gray"
                Text="Activity Graph Area (Coming Soon)" />
        </Border>

        <Grid Grid.Row="5">
            <StackPanel
                HorizontalAlignment="Left"
                Orientation="Horizontal"
                Spacing="10">
                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="11"
                    FontWeight="SemiBold"
                    Foreground="{ThemeResource SystemFillColorCautionBrush}"
                    Text="{x:Bind ViewModel.ActiveSessionDisplayName, Mode=OneWay, FallbackValue='No active session'}" />
                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="10"
                    Foreground="Gray"
                    Text="{x:Bind ViewModel.ConnectedJoystickName, Mode=OneWay}" />
            </StackPanel>
            <StackPanel
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Orientation="Horizontal"
                Spacing="10">
                <TextBlock
                    FontSize="10"
                    Foreground="Gray"
                    Text="{x:Bind sys:String.Format('Tokens Hoy: {0}', ViewModel.GlobalTokensToday), Mode=OneWay}" />
                <TextBlock
                    FontSize="10"
                    Foreground="Gray"
                    Text="{x:Bind sys:String.Format('Tokens 30d: {0}', ViewModel.GlobalTokensLast30), Mode=OneWay}" />
                <TextBlock
                    FontSize="10"
                    Foreground="Gray"
                    Text="{x:Bind sys:String.Format('Tokens Total: {0}', ViewModel.GlobalTokensTotal), Mode=OneWay}" />
            </StackPanel>
        </Grid>

        <ProgressRing
            Grid.RowSpan="6"
            Width="50"
            Height="50"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}" />

    </Grid>
</Page>