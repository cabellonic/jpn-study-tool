            <SolidColorBrush x:Key="ActionButtonBlueBrush" Color="{StaticResource ActionButtonBlueColor}" />
            <Color x:Key="ActionButtonBlueHoverColor">#FF005A9E</Color>
            <SolidColorBrush x:Key="ActionButtonBlueHoverBrush" Color="{StaticResource ActionButtonBlueHoverColor}" />

            <Color x:Key="SubtleButtonNormalBackgroundColor">#FFE0E0E0</Color>
            <SolidColorBrush x:Key="SubtleButtonNormalBackgroundBrush" Color="{StaticResource SubtleButtonNormalBackgroundColor}" />
            <Color x:Key="SubtleButtonHoverFocusBackgroundColor">#FFCCCCCC</Color>
            <SolidColorBrush x:Key="SubtleButtonHoverFocusBackgroundBrush" Color="{StaticResource SubtleButtonHoverFocusBackgroundColor}" />
            <Color x:Key="SubtleButtonPressedBackgroundColor">#FFB0B0B0</Color>
            <SolidColorBrush x:Key="SubtleButtonPressedBackgroundBrush" Color="{StaticResource SubtleButtonPressedBackgroundColor}" />
            <Color x:Key="SubtleButtonNormalBorderColor">#FFADADAD</Color>
            <SolidColorBrush x:Key="SubtleButtonNormalBorderBrush" Color="{StaticResource SubtleButtonNormalBorderColor}" />
            <Color x:Key="SubtleButtonFocusVisualBorderColor">#FF707070</Color>
