        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
            </ResourceDictionary.MergedDictionaries>

            <converters:NegatedBooleanConverter x:Key="NegatedBooleanConverter" />
            <converters:StringEqualsTriggerConverter x:Key="StringEqualsTriggerConverter" />
            <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
            <converters:BoolToBrushConverter x:Key="BoolToBrushConverter" />
            <converters:IntToVisibilityConverter x:Key="IntToVisibilityConverter" />
            <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
            <converters:KatakanaToHiraganaConverter x:Key="KatakanaToHiraganaConverter" />
            <converters:EnumToBooleanConverter x:Key="EnumToBooleanConverter" />

